FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY backend/ .
COPY database/ .
COPY scripts/ .
COPY tests/ .

# Copy test configuration
COPY .env.test .env

# Create test directories
RUN mkdir -p /app/tests/fixtures/documents \
    && mkdir -p /app/tests/fixtures/images \
    && mkdir -p /app/tests/fixtures/videos \
    && mkdir -p /app/test_logs

# Set environment variables for testing
ENV TESTING=true
ENV LOG_LEVEL=DEBUG
ENV PYTHONPATH=/app

# Install test dependencies
RUN pip install --no-cache-dir pytest pytest-asyncio pytest-cov

# Create entrypoint script
RUN echo '#!/bin/bash\n\
set -e\n\
echo "Starting KRAI Test Environment..."\n\
echo "Environment: $ENVIRONMENT"\n\
echo "Testing: $TESTING"\n\
echo "Database: $DATABASE_URL"\n\
echo "Storage: $MINIO_ENDPOINT"\n\
exec "$@"' > /app/entrypoint.sh && chmod +x /app/entrypoint.sh

ENTRYPOINT ["/app/entrypoint.sh"]
CMD ["python", "-m", "pytest", "tests/", "-v", "--tb=short"]
