APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=
# DB_PERSISTENT=false
# DB_TIMEOUT=30
# DB_POOL_MIN=2
# DB_POOL_MAX=10

SESSION_DRIVER=redis
SESSION_STORE=default
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
CACHE_PREFIX=krai-laravel-cache-

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=krai-redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CACHE_DB=1
REDIS_DB=0

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# KRAI Engine Configuration
# FastAPI backend URL for document processing
# Note: Use Docker service name 'krai-engine' (not container name 'krai-engine-prod')
# for internal Docker network communication
KRAI_ENGINE_URL=http://krai-engine:8000

# Service JWT token for authentication (generate with: openssl rand -base64 32)
# This token is used for backend-to-backend authentication
KRAI_ENGINE_SERVICE_JWT=
KRAI_SERVICE_JWT=

# Stage-based processing:
# The dashboard supports processing individual stages (text extraction, image processing, etc.)
# or running the full pipeline. See config/krai.php for available stages.

# Opcache (for monitoring/visibility; enabled in Dockerfile)
OPCACHE_ENABLE=1
PERFORMANCE_PROFILER_ENABLED=false

# Monitoring Cache TTLs (seconds)
MONITORING_CACHE_TTL_METRICS=30
MONITORING_CACHE_TTL_QUEUE=15
MONITORING_CACHE_TTL_DASHBOARD=180
MONITORING_CACHE_TTL_DATA_QUALITY=300
MONITORING_CACHE_TTL_NAV_BADGES=20
MONITORING_CACHE_TTL_PIPELINE=15

# AI Agent Configuration
# FastAPI AI Agent backend URL (mounted at /agent in main backend)
# Note: Use service name 'krai-engine' (not container name 'krai-engine-prod')
# for Docker network communication
AI_AGENT_URL=http://krai-engine:8000/agent

# Monitoring API base URL
MONITORING_BASE_URL=http://krai-engine:8000

# KRAI Engine URL (backend service)
KRAI_ENGINE_URL=http://krai-engine:8000

# AI Agent Timeouts (seconds)
AI_AGENT_TIMEOUT_CHAT=60
AI_AGENT_TIMEOUT_STREAM=120
AI_AGENT_TIMEOUT_HEALTH=5

# AI Agent Session Cache TTL (seconds)
AI_AGENT_CACHE_SESSION_TTL=3600
AI_AGENT_MAX_HISTORY=50
