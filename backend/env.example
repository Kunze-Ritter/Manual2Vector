# KR-AI-Engine Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here

# =============================================================================
# CLOUDFLARE R2 CONFIGURATION
# =============================================================================
# Get these from your Cloudflare dashboard > R2 > Manage R2 API tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# R2 Bucket Names (create these buckets in your Cloudflare dashboard)
R2_BUCKET_DOCUMENTS=krai-documents-images
R2_BUCKET_ERRORS=krai-error-images
R2_BUCKET_PARTS=krai-parts-images

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
# Local Ollama service URL (default is usually correct)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum number of worker threads for parallel processing
MAX_WORKERS=8

# Text chunk size for processing
CHUNK_SIZE=1000

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Custom model names (leave empty to use defaults)
# TEXT_CLASSIFICATION_MODEL=llama3.2:latest
# EMBEDDING_MODEL=embeddinggemma:latest
# VISION_MODEL=llava:latest

# Performance tier override (auto-detected if not specified)
# PERFORMANCE_TIER=low_performance|medium_performance|high_performance

# Database connection pool size
# DB_POOL_SIZE=10

# R2 region (default: auto)
# R2_REGION=auto
